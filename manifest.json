{
    "manifest_version": 2, 
    "name": "Cad Currency Converter",
    "description": "Converts Currencies to Canadian Dollar.",
    "version": "1.0",
    "permissions": ["activeTab", "storage","webNavigation","tabs"],
    "content_scripts": [
        {
            "matches": ["https://ca.finance.yahoo.com/*"],
            "allFrames": true,
            "js": ["/js/jquery.js", "/js/content.js"],
            "css": ["/css/style.css"]
       }
     ],
    "action": {
        "default_icon": {
            "32":"./images/Logo.png"
        },
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [ 
        "images/*.jpg",
        "images/*.png" 
     ],
  "background": {
    "scripts": ["js/bg.js"],
    "persistant": false
  }
}
